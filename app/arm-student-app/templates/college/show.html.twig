{% block title %}College{% endblock %}

{% block body %}
    <h1>College</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ college.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ college.name }}</td>
            </tr>
            <tr>
                <th>ShortName</th>
                <td>{{ college.shortName }}</td>
            </tr>
            <tr>
                <th>PostalAddress</th>
                <td>{{ college.postalAddress }}</td>
            </tr>
            <tr>
                <th>RegisteredAddress</th>
                <td>{{ college.registeredAddress }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ college.email }}</td>
            </tr>
            <tr>
                <th>WebSite</th>
                <td>{{ college.webSite }}</td>
            </tr>
            <tr>
                <th>Logo</th>
                <td>{{ college.logo }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ college.phone }}</td>
            </tr>
            <tr>
                <th>Fax</th>
                <td>{{ college.fax }}</td>
            </tr>
