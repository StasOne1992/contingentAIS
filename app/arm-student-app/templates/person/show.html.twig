{% extends 'base.html.twig' %}

{% block title %}Person{% endblock %}

{% block body %}
    <h1>Person</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ person.id }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ person.FirstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ person.LastName }}</td>
            </tr>
            <tr>
                <th>MiddleName</th>
                <td>{{ person.MiddleName }}</td>
            </tr>
            <tr>
                <th>INN</th>
                <td>{{ person.INN }}</td>
            </tr>
            <tr>
                <th>SNILS</th>
                <td>{{ person.SNILS }}</td>
            </tr>
            <tr>
                <th>MedicalSeries</th>
                <td>{{ person.MedicalSeries }}</td>
            </tr>
            <tr>
                <th>MedicalNumber</th>
                <td>{{ person.MedicalNumber }}</td>
            </tr>
            <tr>
                <th>BirthPlace</th>
                <td>{{ person.BirthPlace }}</td>
            </tr>
            <tr>
                <th>MedicalDateIssue</th>
                <td>{{ person.MedicalDateIssue ? person.MedicalDateIssue|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_person_index') }}">back to list</a>

    <a href="{{ path('app_person_edit', {'id': person.id}) }}">edit</a>

    {{ include('person/_delete_form.html.twig') }}
{% endblock %}
