{% block title %}
    {% if page_title is defined %} {{ page_title }} {% endif %}
{% endblock %}


{% block body %}
    {{ include('characteristic/_form.html.twig', {'button_label': 'Записать изменения'}) }}
    {{ include('characteristic/_generate_modal.html.twig') }}


{% endblock %}
